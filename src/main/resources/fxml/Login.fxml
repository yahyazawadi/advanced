<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <!-- Label for Login Title -->
      <Label layoutX="304.0" layoutY="98.0" prefHeight="21.0" prefWidth="198.0" text="Please Log In your account">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>

      <!-- Email TextField -->
      <TextField fx:id="tv_email" layoutX="304.0" layoutY="131.0" promptText="Email">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>

      <!-- PasswordField -->
      <PasswordField fx:id="tv_password" layoutX="305.0" layoutY="183.0" prefHeight="35.0" prefWidth="198.0" promptText="Password">
         <font>
            <Font size="16.0" />
         </font>
      </PasswordField>

      <!-- Visible Password Field -->
      <TextField fx:id="tv_password_visible" layoutX="305.0" layoutY="183.0" prefHeight="35.0" prefWidth="198.0" promptText="Password" visible="false">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>

      <!-- Show Password Button -->
      <Button fx:id="btn_show_password" layoutX="510.0" layoutY="183.0" mnemonicParsing="false" onMousePressed="#showPassword" onMouseReleased="#hidePassword" prefHeight="35.0" prefWidth="39.0" text="👁">
         <font>
            <Font size="16.0" />
         </font>
      </Button>

      <!-- Login Button -->
      <Button fx:id="btn_login" layoutX="304.0" layoutY="230.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="35.0" prefWidth="198.0" style="-fx-background-color: #030280;" text="Log In" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Button>

      <!-- Sidebar with labels -->
      <AnchorPane layoutY="-3.0" prefHeight="406.0" prefWidth="230.0" style="-fx-background-color: #030280;">
         <children>
            <Label layoutX="14.0" layoutY="97.0" prefHeight="32.0" prefWidth="210.0" text="RealState System" textFill="white">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="66.0" layoutY="72.0" text="Welcome to" textFill="white">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <!-- Forgot Password Hyperlink -->
      <Hyperlink fx:id="forgetpassword"  layoutX="356.0" layoutY="278.0" text="Forgot Password?" textFill="#030280" onAction="#handleForgetPassword"/>

      <!-- Content Area (ScrollPane for dynamic content) positioned below the login form -->

   </children>
</AnchorPane>
