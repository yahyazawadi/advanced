<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/javafx"
            fx:id="contentArea"
            fx:controller="controllers.PropertyDetailController"
            prefHeight="730.0" prefWidth="800.0" stylesheets="@../css/home.css">
    <children>
        <!-- Header -->
        <AnchorPane prefHeight="60.0" prefWidth="800.0" style="-fx-background-color: #D1CECE;">
            <children>
                <Label layoutX="10.0" layoutY="20.0" text="Property Details"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <!-- زر الرجوع -->
                <Button fx:id="backButton" layoutX="700.0" layoutY="15.0" text="Back" onAction="#goBack"
                        style="-fx-font-size: 14px;" />
            </children>
        </AnchorPane>

        <!-- Content Area -->
        <AnchorPane layoutY="70.0" prefHeight="660.0" prefWidth="800.0">
            <children>
                <ImageView fx:id="propertyImage" layoutX="50.0" layoutY="20.0" fitWidth="300.0" fitHeight="200.0"
                           style="-fx-border-color: #CCCCCC;" />
                <Label layoutX="400.0" layoutY="20.0" text="Name:" style="-fx-font-size: 14px;" />
                <Label fx:id="nameLabel" layoutX="500.0" layoutY="20.0" style="-fx-font-size: 14px;" />
                <Label layoutX="400.0" layoutY="50.0" text="Country:" style="-fx-font-size: 14px;" />
                <Label fx:id="countryLabel" layoutX="500.0" layoutY="50.0" style="-fx-font-size: 14px;" />
                <Label layoutX="400.0" layoutY="80.0" text="Type:" style="-fx-font-size: 14px;" />
                <Label fx:id="typeLabel" layoutX="500.0" layoutY="80.0" style="-fx-font-size: 14px;" />
                <Label layoutX="400.0" layoutY="110.0" text="Price:" style="-fx-font-size: 14px;" />
                <Label fx:id="priceLabel" layoutX="500.0" layoutY="110.0" style="-fx-font-size: 14px;" />
                <Label layoutX="400.0" layoutY="140.0" text="State:" style="-fx-font-size: 14px;" />
                <Label fx:id="stateLabel" layoutX="500.0" layoutY="140.0" style="-fx-font-size: 14px;" />
                <Label layoutX="400.0" layoutY="170.0" text="City:" style="-fx-font-size: 14px;" />
                <Label fx:id="cityLabel" layoutX="500.0" layoutY="170.0" style="-fx-font-size: 14px;" />
                <Label layoutX="400.0" layoutY="200.0" text="Zip Code:" style="-fx-font-size: 14px;" />
                <Label fx:id="zipCodeLabel" layoutX="500.0" layoutY="200.0" style="-fx-font-size: 14px;" />
                <Label layoutX="50.0" layoutY="250.0" text="Description:" style="-fx-font-size: 14px;" />
                <Label fx:id="descriptionText" layoutX="50.0" layoutY="280.0" style="-fx-font-size: 14px;" />


                <Button fx:id="makeOfferButton" layoutX="200.0" layoutY="600.0" text="Make an Offer"
                        style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
