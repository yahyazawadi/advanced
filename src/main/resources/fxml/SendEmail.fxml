<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SendEmailController" prefHeight="600.0" prefWidth="600.0">
    <children>
        <Button layoutX="10.0" layoutY="10.0" text="←" fx:id="backButton" style="-fx-font-size: 30; -fx-background-color: transparent; -fx-text-fill: #030280;" />
        <Label text="Verify Your Account" layoutX="200.0" layoutY="40.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #030280;" />
        <TextField fx:id="emailField" layoutX="180.0" layoutY="100.0" prefWidth="240.0" promptText="Enter Your Email" />
        <Button text="Send Verification Code" layoutX="220.0" layoutY="150.0" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #030280; -fx-text-fill: white;" onAction="#handleSendEmail" />
        <Label fx:id="statusLabel" layoutX="180.0" layoutY="200.0" style="-fx-font-size: 14px; -fx-text-fill: red;" />
        <TextField fx:id="verificationCodeField" layoutX="180.0" layoutY="250.0" prefWidth="240.0" promptText="Enter Verification Code" />
        <Button text="Verify Code" layoutX="220.0" layoutY="300.0" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #030280; -fx-text-fill: white;" onAction="#handleSubmitCode" />
        <Label fx:id="verificationStatusLabel" layoutX="180.0" layoutY="350.0" style="-fx-font-size: 14px; -fx-text-fill: red;" />
        <Label text="Set New Password" layoutX="200.0" layoutY="400.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #030280;" />
        <PasswordField fx:id="newPasswordField" layoutX="180.0" layoutY="450.0" prefHeight="40.0" prefWidth="240.0" promptText="New Password" />
        <Label fx:id="passwordHintLabel" layoutX="180.0" layoutY="500.0" style="-fx-font-size: 11px;" textFill="red" />
        <Button text="Submit New Password" layoutX="220.0" layoutY="530.0" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #030280; -fx-text-fill: white;" onAction="#handleSubmitNewPassword" />
    </children>
</AnchorPane>
